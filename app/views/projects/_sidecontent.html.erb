<div class='sidecontent'>
  <div class='new-word-form'>
    <%= form_for(@word) do |f| %>
      <%= f.text_field :name, placeholder: 'Your Word!'%>
      <%= f.text_field :name2, placeholder: 'Alt. Spelling/Hiragana/Rom?'%>
      <%= f.text_area :definition, placeholder: 'Write in the meaning!' %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit "Save Word!" %>
    <% end %>
  </div>
  <br>
  <div class='words-container'>
    <% if current_user.words.empty? %>
      You have no saved words right now!
    <% else %>
      <% current_user.words.each do |word| %>
      <div class='word-box'>
        <div class='name'><%= word.name %></div>
        <div class='name-alt'><%= word.name2 %></div>
        <div class='definition'><%= word.definition %></div>
      </div>
      <br>
      <% end %>
    <% end %>
  </div>
</div>