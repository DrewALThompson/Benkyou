<% if @projects.empty? %>
  There are currently no projects! Try adding your own! <%= link_to "Create a project", new_project_path %>
<% else %>
<% if current_user == @user %>
  <%= link_to "Edit My profile", edit_user_path(current_user) %>
<% elsif current_user.admin %>
  <%= link_to "Edit #{@user.name}'s profile", edit_user_path(@user) %>
<% end %>

  <% @projects.each do |project| %>
  <br>
  <div class='projects'>
    <div class='titles'>
      <div class='title'>
        <%= link_to "#{project.title}", project_path(project) %>
      </div>
      <div class='trns-title'>
        <%= project.translation_title%>
      </div>
    </div>
    <div class='contents'>
      <%= project.content %>
    </div>
    <div class='trns'>
      <%= project.translation %>
    </div>
    <div class='owner'>
      By <%= project.owner.name %>
    </div>
  </div>  
  <% end %>
<% end %>
