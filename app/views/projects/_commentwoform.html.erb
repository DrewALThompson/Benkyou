<div class='comments'>
  <% if @project.comments.empty? %>
    There are currently no comments!
  <% else %>
    <% @project.comments.each do |comment| %>
    <div class='commentbox'>
      <div class='comment'><%= comment.content %></div>
      <div class='commenter'><%= comment.commenter.name%></div>
    </div>
    <% end %>
</div>
<% end %>
