<% if current_user %>
  <%= render 'sidecontent'%>
<% end %>

<br>
<div class='project-container'>
  <div class='project'>
    <div class='title'>
      <%= @project.title %>
    </div>
    <div class='contents'>
      <%= @project.content %>
    </div>
  </div>
  <div class='translation'>
    <div class='trns-title'>
      <%= @project.translation_title %>
    </div>
    <div class='trns'>
      <%= @project.translation %>
    </div>
  </div>
</div>
<% if @project.id == current_user.id %>
<div class='translation-link'>
  <%= link_to "Get to Translating!", edit_project_path(@project)%>
</div>
<% end %>
<br>
<%= render "commentcontent"%> 