<%= render 'errors' %>
<div class='new-form'>
  <%= form_for(@user) do |f| %>
    <%= f.label :name%><br>
    <%= f.text_field :name %><br>
    <%= f.label :email %><br>
    <%= f.text_field :email%><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit %><br>
  <% end %>

  <%= link_to 'Signup with Github', '/auth/github' %>
</div>