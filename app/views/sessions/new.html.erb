<div class='flash'>
  <% flash.each do |type, msg| %>
    <p><%= msg %></p>
  <% end %>
</div>

<%= form_tag('/login', method: 'post') do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Login' %>
<% end %>