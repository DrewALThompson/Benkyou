<div class='topnav'>
    <%= link_to '勉強', root_path, class: "home"%>
    <% if current_user %>
      <div class='dropdown'>
        <button class="dropbtn"><%= current_user.name %></button>
        <div class='dropcontent'>
          <%= link_to "My Page", user_path(current_user)%>
          <%= link_to "My Words", user_words_path(current_user)%>
          <%= link_to "My Projects", user_projects_path(current_user)%>
          <% if current_user.admin == true %>
            <%= link_to "Admin", admin_path %>
          <% end %>
        </div>
      </div>
    <%= link_to "Create a project", new_project_path%>
    <%= link_to "Logout", logout_path %>
    <% else %>
      <%=link_to "Login", login_path%>
      <%=link_to "Sign Up", new_user_path%>
    <% end %>
    <a href='https://jisho.org/' target='_blank'>Jisho</a>
  </div>